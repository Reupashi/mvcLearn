@using (Ajax.BeginForm(
    "_SelectData",
    new AjaxOptions
    {
        UpdateTargetId = "data",
        LoadingElementId = "loading",
        LoadingElementDuration = 1000

    }
    ))
{<div>
        <p style="margin:0 0 0 0 ;">
            Початок назви <br />
            <input type="text" name="selName" />
        </p>
        <hr />
        <p style="margin:-100px 0 0 300px ;">
            Імя професора<br />
            @Html.DropDownList("selProfessorName", ViewBag.selProfessorName as SelectList)
        </p>
        <hr />
        <p style="margin:-100px 0 0 600px ;">
            Назва викладачей:<br />
            від <input type="text" name="areaFrom" /><br />
        </p>
        <p style="margin:-46px 0 0 800px ;">
            до <input type="text" name="areaTo" />

        </p>
        <p>
            <input type="submit" value="Відібрати" />
        </p>
        <div id="loading" class="load" style="display:none">
            <p>Завантаження даних...</p>
        </div>

    </div>}


